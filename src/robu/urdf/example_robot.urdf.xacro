<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <material name="grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>


    <link name="world"></link>

    <joint name="world_to_base" type="fixed">
        <parent link="world" />
        <child link="base" />
        <origin  rpy="1.57 0 0" xyz="-3.5 0 0" />
    </joint>

    <link name="base">
        <visual>
            <origin xyz="0.15 2.8 0" rpy="0 0 4.712"/>
            <geometry>
                <mesh filename="package://robu/meshes/Basis.stl" scale="0.005 0.005 0.005"/>
                <box size="5 0.1 3" />
            </geometry>
            <material name="grey" />
        </visual>
    </link>


    <joint name="base_to_l3" type="prismatic">
        <parent link="base" />
        <child link="l3" />
        <origin  rpy="4.712 0 0" xyz="0 3 0" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-1.5" upper="1.5" velocity="0.2"/>
    </joint>


    <link name="l3">
        <visual>
            <origin xyz="-0.025 0 0" rpy="1.5708 1.5708 0"/>
            <geometry>
                <mesh filename="package://robu/meshes/Schulter.stl" scale="0.005 0.005 0.005"/>
                <cylinder length="1.5" radius="0.04" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <joint name="l3_to_l2" type="revolute">
        <parent link="l3" />
        <child link="l2" />
        <!-- <origin xyz="1 0 0" /> -->
        <origin rpy="0 0 0" xyz="0.56 0 0" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-1.65" upper="1.65" velocity="0.2"/>
    </joint>


    <link name="l2">
        <visual>
            <origin xyz="4.38 0.055 -2.35" rpy="0 1.57 -1.57"/>
            <geometry>
                <mesh filename="package://robu/meshes/Oberarm.stl" scale="0.005 0.005 0.005"/>
                <cylinder length="1.5" radius="0.04" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <joint name="l2_to_l1" type="revolute">
        <parent link="l2" />
        <child link="l1" />
        <origin rpy="0 0 0" xyz="2.825 0 0.4" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-2.5" upper="2.5" velocity="0.2"/>
    </joint>


    <link name="l1">
        <visual>
            <origin xyz="1.143 -0.06 0" rpy="0 1.57 -1.57"/>
            <geometry>
                <mesh filename="package://robu/meshes/Unterarm.stl" scale="0.005 0.005 0.005"/>
                <cylinder length="1" radius="0.04" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>


    <joint name="l1_to_grip" type="revolute">
        <parent link="l1" />
        <child link="grip" />
        <origin rpy="0 0 0" xyz="2.48 -0.03 -0.2" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit effort="0.1" lower="-3.1" upper="3.1" velocity="0.2"/>
    </joint>


    <link name="grip">
        <visual>
            <origin xyz="0.25 0 0"/>
            <geometry>
                <box size="0.5 0.5 0.05" />
            </geometry>
            <material name="white" />
        </visual>
    </link>



    <joint name="world_to_camera" type="fixed">
        <parent link="world" />
        <child link="camera" />
        <origin  rpy="-2 0 2.5" xyz="4 1 2" />
    </joint>

    <link name="camera">
        <visual>
            <origin xyz="0 0 -0.2"/>
            <geometry>
                <box size="0.2 0.2 0.4" />
            </geometry>
            <material name="blue" />
        </visual>
    </link>


</robot>
